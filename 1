def find_position(word):
    # Преобразование буквы в соответствующее число (a -> 0, b -> 1, ...)
    def char_to_num(char):
        return ord(char) - ord('a')
    
    n = len(word)
    
    # Сумма геометрической прогрессии для всех слов короче n
    total_shorter_words = (26**n - 26) // 25
    
    # Позиция слова среди слов той же длины
    position_in_same_length = sum((char_to_num(char) + 1) * 26**(n - i - 1) for i, char in enumerate(word))
    
    # Общая позиция слова
    return total_shorter_words + position_in_same_length

# Пример использования
word = input("Введите ваше любимое слово: ")
position = find_position(word)
print(f"Ваше слово находится под номером {position}.")
